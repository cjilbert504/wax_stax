<h2>Wax Stax Users</h2>
<% @users.each do |user| %>
    <hr>
    <button style="width:175px;" onclick="window.location.href = '/users/<%= user.id %>';"><%= user.username %> - View Profile</button>
    <br>
        <% user.vinyl_records.each.with_index(1) do |vinyl_record, index| %>
            <br>
            <strong>Record <%= index %>. </strong>
            <strong>Artist: </strong><%= vinyl_record.artist %>
            <strong>Album: </strong><%= vinyl_record.album %>
            <strong>Genre: </strong><%= vinyl_record.genre %>
            <strong>Release Date: </strong><%= vinyl_record.release_date %>
            <button style="width:175px;" onclick="window.location.href = '/vinyl_records/<%= vinyl_record.id %>';">View This Record</button>
            <br>
        <% end %>
        <hr>
    <% end %>
    
